{
  "manifest_version": 2,

  "name": "Medium stats counter",
  "description": "Better Visualization of your Medium stats. With total views/reads and stats in different timespan like month, week, hour",
  "version": "1.5.1",

  "browser_action": {
    "default_title": "Medium stats counter",
    "default_icon": "icon/icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js; object-src 'self'",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "declarativeContent",
    "https://medium.com/"
  ]
}
