{
  "manifest_version": 2,

  "name": "Medium stats counter",
  "description": "This extension counts the total views/reads/fans of user's Medium stories",
  "version": "1.3.1",

  "browser_action": {
    "default_title": "Medium stats counter",
    "default_icon": "icon/icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "declarativeContent",
    "https://medium.com/"
  ]
}
